{
  "manifest_version": 3,
  "name": "PAL — Autofill & Memory",
  "description": "Save selected text to PAL memory and autofill from PAL.",
  "version": "0.1.0",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "http://localhost:5173/*",
    "http://127.0.0.1:5173/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PAL — Autofill"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
]

}
